{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "dist"
    },
    "include": [
        "src"
    ],
    "typedocOptions": {
        "mode": "file",
        "name": "AKORA Moodle Documentation",
        "out": "docs",
        "readme": "./README.md",
        "theme": "default",
        "includeVersion": true,
        "entryPoints": [
            "src/index.ts"
        ],
        "toc": []
    }
}